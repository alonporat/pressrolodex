<%= render 'pages/home' if !user_signed_in? %>

<div class="panel panel-default">
  <div class="panel-heading">
   <h2>All reporters</h2>
  </div>
  <div class="panel-body">

<% if user_signed_in? %>
    <%= link_to '+ New Pin', new_pin_path %>
<% end %>

<table>
</br>
  <thead>
    <tr>
      <th>Reporter</th>
      <th>Publication</th>
      <th>Reporter Email</th>
      <th>Blog</th>
      <th>Linkedin</th>
      <th>Twitter</th>
      <th>Facebook</th>

      <th>Snitch</th>

      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.Reporter %></td>
        <td><%= pin.Publication %></td>
        <td><%= pin.RepEmail %></td>
        <td><%= pin.Blog %></td>
        <td><%= pin.Linkedin %></td>
        <td><%= pin.Twitter %></td>
        <td><%= pin.Facebook %></td>

        <td><%= pin.user.Nickname if pin.user %></td>
        <td><%= link_to 'Show', pin %></td>
        <% if user_signed_in? %>
        <% if pin.user == current_user %>
          <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
          <td><%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Sure about that?' } %></td>
        <% end %>
        <% end %>


      </tr>
    <% end %>
  </tbody>
</table>

<br>